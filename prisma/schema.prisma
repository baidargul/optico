generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model nature {
  id       String     @id @default(uuid())
  name     String     @unique
  archived Boolean    @default(false)
  category category[]
}

model category {
  id       String @id @default(uuid())
  natureId String
  name     String @unique
  archived Boolean    @default(false)
  nature   nature @relation(fields: [natureId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}
